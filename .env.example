# Configuração ESP32-CAM
# Habilita integração com ESP32-CAM (true/false)
ESP32_CAM_ENABLED=false

# URL do stream MJPEG da ESP32-CAM
# Formato: http://<IP_DA_ESP32>:<PORTA>/stream
ESP32_CAM_URL=http://192.168.1.100:81/stream

# IP do servidor que ativa ESP32 automaticamente
# Se o IP detectado do servidor for igual a este, ESP32-CAM inicia automaticamente
ESP32_SERVER_IP=192.168.1.10

# Configuração de Sessões
# Timeout de inatividade em segundos (padrão: 300 = 5 minutos)
SESSION_TIMEOUT_SECONDS=300

# Tamanho máximo de upload de frame em MB (padrão: 5)
FRAME_UPLOAD_MAX_SIZE_MB=5

# Modo de câmera (futuro uso)
# Opções: client, server, esp32, auto
CAMERA_MODE=auto

# Configuração de Banco de Dados
# Nome do arquivo do banco SQLite
DATABASE_NAME=database.db

# Configuração de Reconhecimento
# Threshold padrão (30-150, menor = mais rigoroso)
DEFAULT_THRESHOLD=85

# Tempo de estabilidade em segundos (quanto tempo deve reconhecer continuamente)
STABILITY_TIME_SECONDS=5

# Tempo de cooldown em segundos (intervalo mínimo entre registros do mesmo CPF)
COOLDOWN_TIME_SECONDS=5
